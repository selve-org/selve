# Environment Configuration
# Set to 'development' or 'production'
NODE_ENV=development

# Clerk API Keys
# Development (test mode): pk_test_... and sk_test_...
# Production (live mode): pk_live_... and sk_live_...
# Get these from https://dashboard.clerk.com/ â†’ API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key

# PostHog API Key
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key

# Sentry DSN
SENTRY_DSN=your_sentry_dsn

# DATABASE REMOVED: Frontend no longer has direct database access
# All database operations now go through backend API
# See backend/.env for database configuration

# Geoapify API Key (for country autocomplete)
NEXT_PUBLIC_GEOAPIFY_API_KEY=your_geoapify_api_key

# Backend API URL (used by frontend to call FastAPI)
# Development: http://localhost:8000
# Production: https://api.selve.me (update when deploying)
NEXT_PUBLIC_API_URL=http://localhost:8000
