# Environment Configuration
# Set to 'development' or 'production'
NODE_ENV=development

# Clerk API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# PostHog API Key
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key

# Sentry DSN
SENTRY_DSN=your_sentry_dsn

# Database URLs (Neon PostgreSQL)
# Development Database (branch: development)
DATABASE_URL_DEV=postgresql://user:password@host-pooler.region.aws.neon.tech/database?sslmode=require&channel_binding=require

# Production Database (branch: production - DEFAULT)
DATABASE_URL_PROD=postgresql://user:password@host-pooler.region.aws.neon.tech/database?sslmode=require

# Active Database URL (auto-selected based on NODE_ENV)
# For development: use DATABASE_URL_DEV
# For production: use DATABASE_URL_PROD
DATABASE_URL=${DATABASE_URL_DEV}

# Geoapify API Key (for country autocomplete)
NEXT_PUBLIC_GEOAPIFY_API_KEY=your_geoapify_api_key

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000
